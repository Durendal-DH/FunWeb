<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.itwillbs.mapper.ArticleMapper">
  
	<select id="getPopularKeyword" resultType="String">
		select concat('\'',keyword,'\'') from board group by keyword order by sum(count) desc limit 0,5
	</select>
	
	<select id="getListCount" resultType="java.lang.Integer">
  		select count(*) from board
  	</select>
  	
	<select id="getList" resultType="com.itwillbs.domain.BoardBean">
  		select * from board where keyword like #{keyword} and page >= #{page} order by num desc limit #{startRow}, #{limit}
  	</select>
  	
  	<select id="getArticleListCount" resultType="java.lang.Integer">
  		select count(*) from article where board_num = #{num}
  	</select>
  	
  	<select id="getArticleList" resultType="com.itwillbs.domain.ArticleBean">
  		select * from article where board_num = #{num} order by num desc limit #{startRow}, #{limit}
  	</select>
  	
  	<select id="getArticleListE" resultType="com.itwillbs.domain.ArticleBean">
  		select * from article where board_num = #{num} order by num desc
  	</select>
  	
  	<select id="selectCount" resultType="java.lang.Integer">
  		select count from board where num = #{num}
  	</select>
  	
  	<update id="updateCount">
  		update board set count = #{count} where num = #{num}
  	</update>
  	
  	<insert id="insertBoard">
		insert into board(date,keyword,count,page) values(now(),#{keyword},#{count},#{page});
	</insert>

	<select id="getBoardMaxNum" resultType="java.lang.Integer">
		select max(num) from board
	</select>

	<insert id="insertArticle">
		insert into article(board_num,subject,link,date,content,press) 
		values(#{board_num},#{subject},#{link},#{date},#{content},#{press})
	</insert>

	<select id="checkDate_keyword" resultType="com.itwillbs.domain.BoardBean">
		select * from board where keyword = #{keyword} and date = date(now())
	</select>

	<delete id="deleteBoard">
		delete from board 	where num = #{num}
	</delete>

	<delete id="deleteArticle">
		delete from article where board_num = #{num}
	</delete>
  	
  	
  </mapper>